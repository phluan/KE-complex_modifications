{
  "title": "Left Ctrl to Naviation Layer",
  "rules": [
    {
      "description": "Disable Left Ctrl, turn on Navigation Layer",
      "manipulators": [
        {
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "navigation_mode",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "navigation_mode",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_control"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Left Ctrl + hjkl to left, down, up, right",
      "manipulators": [
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "navigation_mode",
              "value": 1
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "navigation_mode",
              "value": 1
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "navigation_mode",
              "value": 1
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "navigation_mode",
              "value": 1
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Launch ITerm2 by left_ctrl + t",
      "manipulators": [
        {
          "from": {
            "key_code": "t",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/iTerm.app'"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "navigation_mode",
              "value": 1
            }
          ],
          "type": "basic"
        }
      ]
    },
